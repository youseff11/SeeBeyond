{
  "version": 2,
  "builds": [
    {
      "src": "project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12.2" 
      }
    },
    {
      "src": "build_static.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles" 
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1" 
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "project/wsgi.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@your-secret-key",
    "DATABASE_URL": "@your-database-url"
  }
}