{
  "version": 2,
  "builds": [
    {
      "src": "project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "includeFiles": [
          "project/**",
          "templates/**",
          "project/static/**",
          "project/staticfiles/**",
          "project/media/**",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/project/staticfiles/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/media/(.*)",
      "dest": "/project/media/$1",
      "headers": {
        "Cache-Control": "public, max-age=604800"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "project/wsgi.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "project/wsgi.py",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task/project:/var/task",
    "SECRET_KEY": "xxx",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "seebeyond-*.vercel.app,.vercel.app,.now.sh",
    "DJANGO_SETTINGS_MODULE": "project.settings",
    "DISABLE_COLLECTSTATIC": "1"
  }
}
